<h3>Post a groovy song below!</h3>

  <% if @song.errors.any? %>
    <div>
      <strong>Some issues with your song, please fix them:</strong>
      <ul>
        <% @song.errors.each do |song| %>
          <li><%= song %></li>
          <% end %>
      </ul>
    </div>
  <form method="post" action="/songs">
    <div>
      <label> Your name:</label>
      <input type="text" name="author" value="<%= @song.author %>">
    </div>
    <div>
      <label> Song title:</label>
      <input type="text" name="title" value="<%= @song.title %>">
    </div>
    <div>
      <label> Artist:</label>
      <input type="text" name="artist" value="<%= @song.artist %>">
    </div>
    <div>
      <input type="submit" value="Submit!">
    </div>
  </form>
<% end %>

